#!/usr/bin/env python3
"""
Quick launcher for tracecolor UDP monitor - standalone version
Usage: ./monitor [port]
"""
import sys
import os

# Run monitor.py directly without importing the package (same directory now)
monitor_path = os.path.join(os.path.dirname(os.path.abspath(__file__)), 'monitor.py')
exec(compile(open(monitor_path).read(), monitor_path, 'exec'))